# ============================================================================
# API Environment Variables
# ============================================================================

# Server Configuration
PORT=4011

# Assets & Data Configuration
NEXT_PUBLIC_ASSETS_DIR=/home/node/app/dist/assets
NEXT_PUBLIC_DEFAULT_LANGUAGE=de
NEXT_PUBLIC_CALENDAR_DATA_DIR=/home/node/app/dist/assets/calendar
NEXT_PUBLIC_CALENDAR_ICS_DIR=/home/node/app/dist/assets/ics

# Timezone
TZ=Europe/Berlin

# ============================================================================
# Gemini AI Configuration
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# ============================================================================
# Email Configuration (iCloud)
# ============================================================================
ICLOUD_EMAIL=your_email@icloud.com
ICLOUD_PASSWORD=your_app_specific_password
ICLOUD_SMTP_HOST=smtp.mail.me.com
ICLOUD_SMTP_PORT=587
ICLOUD_SMTP_SECURE=false

# ============================================================================
# UI Environment Variables (NEXT_PUBLIC_* are exposed to the browser)
# ============================================================================

# UI Configuration
NEXT_PUBLIC_DEFAULT_LANGUAGE=de
NEXT_PUBLIC_DEFAULT_THEME_MODE=dark
NEXT_PUBLIC_ACTIVE_SOUND=true
TZ=Europe/Berlin
NEXT_PUBLIC_API_URL=http://localhost:4011
NEXT_PUBLIC_TINY_MCE_API_KEY=your_tiny_mce_api_key_here
