{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local",
		".npmrc"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"dist/**",
				"out/**",
				"lib/**"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"type-check": {
			"dependsOn": [
				"^build"
			],
			"outputs": []
		},
		"homelab": {
			"cache": false
		}
	}
}
